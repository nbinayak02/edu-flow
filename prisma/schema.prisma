generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  fullname  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  school    School? //user can have zero school or one
}

model School {
  id        Int      @id @default(autoincrement())
  name      String
  address   String
  email     String
  contact   String
  iemis     String
  estd      Int
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int      @unique //school must be connected to one user
  sclass    Sclass[] //one to many relationship with class
  exam      Exam[]
}

model Sclass {
  id          Int           @id @default(autoincrement())
  name        String
  school      School        @relation(fields: [schoolId], references: [id])
  schoolId    Int
  createdAt   DateTime      @default(now())
  subject     Subject[]
  student     Student[]
  examDetails ExamDetails[]
  marksheet   Marksheet[]
}

model Subject {
  id          Int           @id @default(autoincrement())
  name        String
  credit_hour Float
  createdAt   DateTime      @default(now())
  sclass      Sclass        @relation(fields: [sclassId], references: [id])
  sclassId    Int
  examDetails ExamDetails[]
  marks       Marks[]
}

model Student {
  id        Int         @id @default(autoincrement())
  name      String
  address   String
  contact   String
  gurdian   String
  year      Int
  iemis     String
  createdAt DateTime    @default(now())
  sclass    Sclass      @relation(fields: [sclassId], references: [id])
  sclassId  Int
  marksheet Marksheet[]
}

model Exam {
  id          Int           @id @default(autoincrement())
  name        String
  year        Int
  createdAt   DateTime      @default(now())
  school      School        @relation(fields: [schoolId], references: [id])
  schoolId    Int
  examDetails ExamDetails[]
  marksheet   Marksheet[]
}

model ExamDetails {
  exam        Exam    @relation(fields: [examId], references: [id])
  sclass      Sclass  @relation(fields: [sclassId], references: [id])
  subject     Subject @relation(fields: [subjectId], references: [id])
  examId      Int
  sclassId    Int
  subjectId   Int
  thFullMarks Int
  thPassMarks Int
  prFullMarks Int
  prPassMarks Int

  //only "subjectId" unique constraint didn't work so making composite key and also
  //model a weak entity.

  @@id(name: "examDetailsId", [examId, subjectId])
}

model Marksheet {
  id              Int      @id @default(autoincrement())
  student         Student  @relation(fields: [studentId], references: [id])
  sclass          Sclass   @relation(fields: [sclassId], references: [id])
  exam            Exam     @relation(fields: [examId], references: [id])
  studentId       Int
  sclassId        Int
  examId          Int
  gpa             Float
  totalCreditHour Float    @default(0)
  remarks         String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  marks           Marks[]
}

model Marks {
  marksheet      Marksheet @relation(fields: [marksheetId], references: [id])
  subject        Subject   @relation(fields: [subjectId], references: [id])
  marksheetId    Int
  subjectId      Int
  theoryMarks    Float
  practicalMarks Float
  thGradeLetter  String    @default("")
  prGradeLetter  String    @default("")
  finalGrade     String    @default("")
  gradePoint     Float     @default(0)

  @@id(name: "marksId", [marksheetId, subjectId]) //unique composite key containing marksheet id and subject id
}
