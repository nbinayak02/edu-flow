generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  fullname  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  schoolId  Int? // user can manage zero or more school
  school    School?  @relation(fields: [schoolId], references: [id])
}

model School {
  id           Int       @id @default(autoincrement())
  name         String
  address      String
  email        String
  contact      String
  iemis        String    @unique
  estd         Int
  logoPublicId String    @default("eduflow_school_default_logo")
  createdAt    DateTime  @default(now())
  users        User[] // one school is managed by multiple user
  sclass       Sclass[] //one to many relationship with class
  exam         Exam[]
  subjects     Subject[]
}

model Sclass {
  id              Int               @id @default(autoincrement())
  name            String
  section         String
  school          School            @relation(fields: [schoolId], references: [id])
  schoolId        Int
  createdAt       DateTime          @default(now())
  subjectAssigned SubjectAssigned[]
  examDetails     ExamDetails[]
  enrollment      Enrollment[]

  @@unique([name, schoolId, section])
}

model Subject {
  id              Int               @id @default(autoincrement())
  name            String
  schoolId        Int
  createdAt       DateTime          @default(now())
  school          School            @relation(fields: [schoolId], references: [id])
  examDetails     ExamDetails[]
  marks           Marks[]
  subjectAssigned SubjectAssigned[]
}

model SubjectAssigned {
  subjectId   Int
  sclassId    Int
  credit_hour Float
  subject     Subject @relation(fields: [subjectId], references: [id])
  sclass      Sclass  @relation(fields: [sclassId], references: [id])

  @@id([subjectId, sclassId])
}

model Student {
  id         Int          @id @default(autoincrement())
  name       String
  address    String
  contact    String
  gurdian    String
  rollNumber Int
  iemis      String       @unique
  createdAt  DateTime     @default(now())
  enrollment Enrollment[]
}

model Enrollment {
  id           Int         @id @default(autoincrement())
  student      Student     @relation(fields: [studentId], references: [id])
  sclass       Sclass      @relation(fields: [sclassId], references: [id])
  studentId    Int
  sclassId     Int
  academicYear Int
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  marksheets   Marksheet[]

  @@unique([studentId, sclassId, academicYear])
}

model Exam {
  id           Int           @id @default(autoincrement())
  name         String
  academicYear Int
  createdAt    DateTime      @default(now())
  school       School        @relation(fields: [schoolId], references: [id])
  schoolId     Int
  resultDate   String
  examDetails  ExamDetails[]
  marksheet    Marksheet[]
}

model ExamDetails {
  exam        Exam    @relation(fields: [examId], references: [id])
  sclass      Sclass  @relation(fields: [sclassId], references: [id])
  subject     Subject @relation(fields: [subjectId], references: [id])
  examId      Int
  sclassId    Int
  subjectId   Int
  thFullMarks Int
  thPassMarks Int
  prFullMarks Int
  prPassMarks Int

  //only "subjectId" unique constraint didn't work so making composite key and also
  //model a weak entity.

  @@id(name: "examDetailsId", [examId, subjectId, sclassId])
}

model Marksheet {
  id              Int        @id @default(autoincrement())
  enrollment      Enrollment @relation(fields: [enrollmentId], references: [id])
  exam            Exam       @relation(fields: [examId], references: [id])
  enrollmentId    Int
  examId          Int
  gpa             Float
  totalCreditHour Float      @default(0)
  remarks         String
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  marks           Marks[]
}

model Marks {
  marksheet      Marksheet @relation(fields: [marksheetId], references: [id])
  subject        Subject   @relation(fields: [subjectId], references: [id])
  marksheetId    Int
  subjectId      Int
  theoryMarks    Float
  practicalMarks Float
  thGradeLetter  String    @default("")
  prGradeLetter  String    @default("")
  finalGrade     String    @default("")
  gradePoint     Float     @default(0)

  @@id(name: "marksId", [marksheetId, subjectId]) //unique composite key containing marksheet id and subject id
}
