
generator client {
  provider = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  fullname  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  school    School? //user can have zero school or one
}

model School {
  id      Int      @id @default(autoincrement())
  name    String
  address String
  email   String
  contact String
  iemis   String
  estd    Int
  user    User     @relation(fields: [userId], references: [id])
  userId  Int      @unique //school must be connected to one user
  sclass  Sclass[] //one to many relationship with class
}

model Sclass {
  id       Int       @id @default(autoincrement())
  name     String
  school   School    @relation(fields: [schoolId], references: [id])
  schoolId Int
  subject  Subject[]
}

model Subject {
  id          Int     @id @default(autoincrement())
  name        String
  credit_hour Float
  sclass      Sclass  @relation(fields: [sclassId], references: [id])
  sclassId    Int
}
